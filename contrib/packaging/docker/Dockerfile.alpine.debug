FROM alpine:latest

COPY . /myMPD/
WORKDIR /myMPD
RUN <<EOF
set +ex
apk update
apk upgrade
./build.sh installdeps
./build.sh debug
adduser -D -H -h /var/lib/mympd -s /sbin/nologin -g myMPD -u 1000 mympd
EOF

USER mympd
ENTRYPOINT ["/myMPD/debug/mympd"]
