pkgname=mympd
pkgver=6.11.1
pkgrel=0
pkgdesc="myMPD is a standalone and mobile friendly web-based MPD client."
url="https://jcorporation.github.io/myMPD/"
arch="all"
license="GPL-2.0-or-later"
depends="libid3tag flac openssl lua5.3 pcre"
makedepends="cmake libid3tag-dev flac-dev openssl-dev linux-headers lua5.3-dev pkgconf pcre-dev"
install="$pkgname.pre-install $pkgname.post-install"
source="mympd_$pkgver.orig.tar.gz"
builddir="$srcdir"
options="!check"
#no test suite

build() {
	cd "$builddir" || exit 1
	mkdir release
	cd release || exit 1
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=RELEASE ..
	make
}

package() {
	cd "$builddir/release" || exit 1
	make DESTDIR="$pkgdir" install
}
